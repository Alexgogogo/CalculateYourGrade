<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.alex.coursegradecalculator.MainActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="7"
        android:stretchColumns="0">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#303395"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assignment(15%)"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/assEditText"
                android:inputType="numberDecimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#2E50A3"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Participation(15%)"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/partEditText"
                android:inputType="numberDecimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#2C7BB8
"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project(20%)"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ProjectEditText"
                android:inputType="numberDecimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#2B98C6
"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quizzes(20%)"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/QuizEditText"
                android:inputType="numberDecimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#29B5D4
"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exam(30%)"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ExamEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:text="80"
                android:focusable="false"
                android:longClickable="false"
                android:clickable="false"
                android:cursorVisible="false"/>

        </TableRow>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#99B898"
            android:gravity="left"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Exam Mark"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:id="@+id/examTextView"/>

            <SeekBar
                android:id="@+id/seek"
                android:layout_marginLeft="10dip"
                android:layout_width="230dip"
                android:layout_height="match_parent"
                android:progress="80"
                android:max="100"
                android:indeterminate="false" />

        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="#474747">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:text="Final Mark"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/Final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:focusable="false"
                android:longClickable="false"
                android:clickable="false"
                android:cursorVisible="false"/>

        </TableRow>


    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="20sp"
        android:gravity="center">

        <Button
            android:id="@+id/ResetAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset" />

    </LinearLayout>


</LinearLayout>
